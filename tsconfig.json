{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/dist/**"],
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2020"],
    "module": "ES2020",
    "target": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  }
}
